<%= form_for @borrower, html: { class: "row g-3" } do |f| %>
    <% if @borrower.errors.any? %>
        <div class="error-message">
        <%= @borrower.errors.full_messages.to_sentence.capitalize %>
        </div>
    <% end %>

    <div class="col-6">
        <label for="name">Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "John Doe" %>
    </div>
    <div class="col-6">
        <label for="email">Email</label>
        <%= f.text_field :email, class: "form-control", placeholder: "johndoe@example.com" %>
    </div>
    <div class="col-12">
        <label for="address">Address</label>
        <%= f.text_area :address, class: "form-control", placeholder: "1234 Main St" %>
    </div>
    <div class="col-12">
        <div class="form-check">
        <%= f.check_box :status, class: "form-check-input" %>
        <label class="form-check-label" for="gridCheck">
            Active?
        </label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
<% end %>